@page
@model IndexModel
@{
    ViewData["Title"] = "Fraud Detection Dashboard";
}

<h2>Fraud Detection Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-success text-white p-3">
            <h5>Total Transactions</h5>
            <h3>1200</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-danger text-white p-3">
            <h5>Fraud Detected</h5>
            <h3>45</h3>
        </div>
    </div>
</div>

<br />

<canvas id="transactionChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var ctx = document.getElementById('transactionChart');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Mon', 'Tue', 'Wed', 'Thu'],
            datasets: [{
                label: 'Transactions',
                data: [12, 19, 3, 5],
                borderColor: 'blue'
            }]
        }
    });
</script>
